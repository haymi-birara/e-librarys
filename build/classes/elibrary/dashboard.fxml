    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Welcome to E-Library System" style="-fx-font-size: 24px;"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Books" onAction="#handleBooks" styleClass="primary-button"/>
        <Button text="Borrowing" onAction="#handleBorrowing" styleClass="primary-button"/>
        <Button text="Reports" onAction="#handleReports" styleClass="primary-button"/>
    </HBox>
</VBox> 