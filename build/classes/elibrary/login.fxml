<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600" prefWidth="800"
           stylesheets="/elibrary/login.css"
           styleClass="login-container"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="elibrary.LoginController">

    <children>
        <VBox fx:id="formBox" spacing="15" styleClass="form-container" maxWidth="400">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
            <Text styleClass="title-text" text="E-Library" />
            <Text styleClass="subtitle-text" text="Your Digital Reading Companion" />

            <TextField fx:id="usernameField" promptText="Username" styleClass="text-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field"/>

            <Label fx:id="errorLabel" text="" />

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="loginButton" text="Login" styleClass="primary-button"/>
                <Button fx:id="exitButton" text="Exit" styleClass="secondary-button"/>
            </HBox>

            <HBox alignment="CENTER" spacing="5">
                <Text styleClass="link-text" text="Don't have an account?"/>
                <Hyperlink fx:id="registerNow" text="Register Now" styleClass="hyperlink"/>
            </HBox>
        </VBox>
    </children>
</StackPane>
