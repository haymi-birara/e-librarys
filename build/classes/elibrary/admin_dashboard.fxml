<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="elibrary.AdminDashboardController"
            stylesheets="@styles.css">
    
    <top>
        <HBox styleClass="header">
            <Label text="E-Library System (Admin)" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
<!--                <Label fx:id="notificationBadge" text="0" styleClass="notification-badge"/>
                <Button fx:id="notificationsButton" text="Notifications" onAction="#showNotifications"/>-->
                <Label fx:id="userLabel" text="Welcome, Admin"/>
                <Button text="Logout" onAction="#handleLogout"/>
            </HBox>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <Button text="Books" onAction="#showBooks" styleClass="sidebar-button"/>
            <Button text="Borrowers" onAction="#showBorrowers" styleClass="sidebar-button"/>
            <Button text="Borrowing" onAction="#showBorrowing" styleClass="sidebar-button"/>
            <Button text="Users" onAction="#showUsers" styleClass="sidebar-button"/>
            <Button text="Reports" onAction="#showReports" styleClass="sidebar-button"/>
            <Button text="Settings" onAction="#showSettings" styleClass="sidebar-button"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentArea">
            <Label text="Welcome to the Admin Dashboard!" />
        </StackPane>
    </center>
    
    <bottom>
        <HBox styleClass="footer" alignment="CENTER">
            <padding>
                <Insets top="5" right="10" bottom="5" left="10"/>
            </padding>
            <Label text="Â© 2024 E-Library System. All rights reserved." styleClass="footer-text"/>
        </HBox>
    </bottom>
    
</BorderPane>
