<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="elibrary.DashboardOverviewController"
      spacing="20"
      styleClass="dashboard-overview">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Statistics Cards -->
    <HBox spacing="20">
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Total Books" styleClass="stat-title"/>
            <Label fx:id="totalBooksLabel" styleClass="stat-value"/>
        </VBox>
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Active Borrowers" styleClass="stat-title"/>
            <Label fx:id="activeBorrowersLabel" styleClass="stat-value"/>
        </VBox>
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Overdue Books" styleClass="stat-title"/>
            <Label fx:id="overdueBooksLabel" styleClass="stat-value"/>
        </VBox>
        <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
            <Label text="Total Users" styleClass="stat-title"/>
            <Label fx:id="totalUsersLabel" styleClass="stat-value"/>
        </VBox>
    </HBox>
    
    <!-- Charts Section -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Borrowing Trends Chart -->
        <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
            <Label text="Borrowing Trends" styleClass="chart-title"/>
            <LineChart fx:id="borrowingTrendsChart" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis label="Month"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Number of Books"/>
                </yAxis>
            </LineChart>
        </VBox>
        
        <!-- Popular Books Chart -->
        <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
            <Label text="Popular Books" styleClass="chart-title"/>
            <BarChart fx:id="popularBooksChart" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis label="Books"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Borrows"/>
                </yAxis>
            </BarChart>
        </VBox>
    </HBox>
    
    <!-- Recent Activity -->
    <VBox styleClass="recent-activity">
        <Label text="Recent Activity" styleClass="section-title"/>
        <TableView fx:id="recentActivityTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                <TableColumn fx:id="activityColumn" text="Activity" prefWidth="300"/>
                <TableColumn fx:id="userColumn" text="User" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>
    
</VBox> 