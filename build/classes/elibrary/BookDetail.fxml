<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="elibrary.BookDetailController"
      padding="20"
 stylesheets="@bookdetail.css">
    
    <ImageView fx:id="coverImage" fitWidth="150" fitHeight="200" preserveRatio="true"/>
    
    <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label fx:id="authorLabel" />
    <Label fx:id="quantityLabel" />

</VBox>
